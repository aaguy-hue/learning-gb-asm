    "tasks": [
        {
            "label": "Build (my projects)",
            "type": "shell",
            "command": "${fileDirname}\\build.bat",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build (tutorial)",
            "type": "shell",
            "command": "cd ${fileDirname} && ..\\build.bat ${fileBasename}",
